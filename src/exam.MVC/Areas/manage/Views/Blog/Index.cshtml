@model List<Blog>
@{
    int counter = 0;
}
<div class="container d-flex justify-content-between align-items-center " style="background-color:antiquewhite">
    <h1>Create Blog:</h1>
    <a asp-action="create" asp-controller="blog" class="btn btn-primary">Create</a>
</div>
<div class="container " >
    <div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Action</th>

              
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td class="max-width:100px"><img src="~/uploads/blogs/@item.ImageUrl" />Image</td>
                    <td>
                        <a asp-action="update" asp-controller="blog" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                        <a asp-action="delete" asp-controller="blog" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                       
                    </td>


                </tr>
            }
          
           
        </tbody>
       
    </table>
</div>
</div>
